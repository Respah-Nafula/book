<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Book_D">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="381dp"
        android:layout_height="371dp"
        app:srcCompat="@drawable/discussion"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/etDiscussion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="366dp" />

    <TextView
        android:id="@+id/tvDiscussion"
        android:layout_width="351dp"
        android:layout_height="128dp"
        android:layout_marginTop="60dp"
        android:text=" Students having a group discussion on a weekend"
        android:textColor="#100F0F"
        android:textSize="34sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="44dp" />

    <Button
        android:id="@+id/btnpa"
        android:layout_width="124dp"
        android:layout_height="49dp"
        android:text="Previous"
        app:layout_constraintBottom_toBottomOf="@+id/btnma"
        app:layout_constraintTop_toTopOf="@+id/btnma"
        tools:layout_editor_absoluteX="49dp" />

    <Button
        android:id="@+id/btnma"
        android:layout_width="114dp"
        android:layout_height="51dp"
        android:layout_marginTop="12dp"
        android:text=" Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDiscussion"
        app:layout_constraintVertical_bias="0.458"
        tools:layout_editor_absoluteX="221dp" />

</androidx.constraintlayout.widget.ConstraintLayout>