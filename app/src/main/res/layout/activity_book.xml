<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00897B"
    tools:context=".Book_A">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="373dp"
        android:layout_height="335dp"
        app:srcCompat="@drawable/kotlin"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="36dp" />

    <TextView
        android:id="@+id/tvKotlin"
        android:layout_width="349dp"
        android:layout_height="54dp"
        android:text="Kotlin is a front end mobile development language."
        android:textSize="24sp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="398dp" />

    <Button
        android:id="@+id/btnpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#82119F"
        android:text=" Previous"
        app:layout_constraintBottom_toBottomOf="@+id/btnma"
        app:layout_constraintTop_toTopOf="@+id/btnma"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="87dp" />

    <Button
        android:id="@+id/btnma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#17DC20"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvKotlin"
        app:layout_constraintVertical_bias="0.298"
        tools:layout_editor_absoluteX="238dp" />
</androidx.constraintlayout.widget.ConstraintLayout>